package tp;

public class Personne {
	private String prenom;
	private String nom;
	private int age;
	//Integer age;
	
	/*public Personne(String prenom, String nom, int age)  {
		this.prenom = prenom;
		this.nom = nom;
		this.age = age;
	}
	*/
	
	public Personne()  {
		this.prenom = "?";
		this.nom = "toto";
		this.age = 0;
	}
			
	
	public Personne(String prenom, String nom, int age) {
	
		this.prenom = prenom;
		this.nom = nom;
		this.age = age;
	}

	@Override
	public String toString() {
		return "Personne [prenom=" + prenom + ", nom=" + nom + ", age=" + age + "]";
	}
	
	
	public String getPrenom() {
		return prenom;
	}


	public void setPrenom(String prenom) {
		this.prenom = prenom;
	}
	
	//fonction incrementerAge()
	public void IncrementerAge() {
		//age = this.age + 1;
		this.age++;
	}
	
	//nomComplet()
	//retourne la concaténation de prénom et nom
	public String nomComplet( ) {
		return "le nom complet est : " +prenom +" "+ nom;
	}


	public String getNom() {
		return nom;
	}


	public void setNom(String nom) {
		this.nom = nom;
	}


	public int getAge() {
		return age;
	}


	public void setAge(int nouvel_age) {
		if(nouvel_age >= 0 && nouvel_age < 150)  this.age = nouvel_age; 
		
	}
	
	

}
