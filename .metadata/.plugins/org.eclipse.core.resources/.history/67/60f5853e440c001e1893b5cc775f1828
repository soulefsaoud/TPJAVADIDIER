	public Personne(String prenom, String nom, int age)  {
		this.prenom = prenom;
		this.nom = noms;
		this.age = age;
	}
	
	@Override
	public String toString() {
		return "Personne [prenom=" + prenom + ", nom=" + nom + ", age=" + age + "]";
	}
	
	
	public String getPrenom() {
		return prenom;
	}


