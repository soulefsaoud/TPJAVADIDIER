package tp;

public class Personne {
	private String prenom;
	String nom;
	int age;
	//Integer age;
	
	/*public Personne(String prenom, String nom, int age)  {
		this.prenom = prenom;
		this.nom = nom;
		this.age = age;
	}
	
	public Personne()  {
		this.prenom = "?";
		this.nom = "toto";
		this.age = 0;
	}
